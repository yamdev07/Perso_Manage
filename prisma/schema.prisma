generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id         Int      @id @default(autoincrement())
  firstname  String
  lastname   String
  email      String   @unique
  phone      String?
  position   String
  department String?
  salary     Float?
  status     String   @default("actif")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
